<ul id="group-invite-list" class="list-group list-group-flush">
    {{#invites}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="mr-auto">{{name}}</span>
        <button class="btn btn-success mr-1 group_accept_invite_button group-invite-{{id}}" data-id="{{id}}"><i class="fas fa-check"></i></button>
        <button class="btn btn-danger group_decline_invite_button group-invite-{{id}}" data-id="{{id}}"><i class="fas fa-times"></i></button>
    </li>
    {{/invites}}
</ul>