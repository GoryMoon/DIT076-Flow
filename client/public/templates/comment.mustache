<div class="comment clearfix"  data-comid="{{id}}">
    <img src="img/profile.png" class="float-left profile-img profile-comment rounded-circle" alt="Profile pic">
    <div class="user-info">
        <div class="clearfix">
            <div class="float-left">
                <h5>{{nick}}</h5>
                <small class="text-muted live-time" title="{{tooltip_time}}" data-rawtime="{{raw_time}}" data-toggle="tooltip" data-placement="bottom">{{time}}</small>
            </div>
            <div class="droptext float-right">
                <div class="dropdown">
                    <a class="dropdown-toggle" id="commentDrop{{id}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-h"></i></a>
                    <div class="dropdown-menu" aria-labelledby="commentDrop{{d}}">
                        <a class="comment_hide_button pointer dropdown-item">Hide</a>
                    </div>
                </div>
          </div>
        </div>
    </div>
    <hr>
    <div class="clearfix comment-text">
        {{text}}
    </div>
</div>